<!--DIV for comments-->
<div style="margin-left: 2%; border-top:5px dashed navy; margin-right: 5%">
<h2><strong>Comments</strong></h2>
<% @script.comments.each do |comment| %>
    <div id="comment">
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
        </div>
<% end %>
 
<h3>Add a comment:</h3>
<%= form_for([@script, @script.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
